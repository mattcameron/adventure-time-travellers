<%= javascript_include_tag 'https://js.stripe.com/v2/', data: { 'turbolinks-eval': false } %>
<%= javascript_tag "Stripe.setPublishableKey('#{Rails.configuration.stripe[:publishable_key]}');" %>

<%= label_tag :card_number %>
<%= text_field_tag :card_number %>

<%= label_tag :exp_month %>
<%= number_field_tag :exp_month, nil, min: 0, max: 12 %>

<%= label_tag :exp_year %>
<%= number_field_tag :exp_year, nil, min: 2016, max: 2050 %>

<%= label_tag :card_verification, 'CVC' %>
<%= number_field_tag :card_verification %>